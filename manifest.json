{
  "manifest_version": 3,
  "name": "Surfer",
  "version": "1.0",
  "description": "Summarizes a webpage by its URL.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": ["activeTab", "tabs"],
  "host_permissions": ["http://localhost/*"]
}
